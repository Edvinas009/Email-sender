<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="X-UA-Compatible" content="ie=edge" />
    <title>Contact Form</title>
    <link
      href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css"
      rel="stylesheet"
      integrity="sha384-wvfXpqpZZVQGK6TAh5PVlGOfQNHSoD2xbE+QkPxCAFlNEevoEH3Sl0sibVcOQVnN"
      crossorigin="anonymous"
    />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/3.5.2/animate.css"
    />
    <link rel="stylesheet" href="public/css/style.css" />
  </head>
  <body>
    <div class="container">
      <h1> Contact your friend</h1>
      <div class="wrapper animated bounceInLeft">
        <div class="company-info">
          <h2>Get in touch</h2>
          <hr />
          <ul>
            <li><i class="fa fa-road"></i> Vilnius bir</li>
            <li><i class="fa fa-phone"></i> (370) 62306160</li>
            <li><i class="fa fa-envelope"></i> test@gmail.com</li>
          </ul>
        </div>
        <div class="contact">
          <h3>Email your friend</h3>
          {{msg}}
          <form method="POST" action="send">
            <p>
              <label>Your name</label>
              <input type="text" name="name" />
            </p>
            <p>
              <label>Your friend name</label>
              <input type="text" name="friendName" />
            </p>
            <p>
              <label>Your friend email Address</label>
              <input type="email" name="email" />
            </p>
            <p>
              <label>Your phone Number</label>
              <input type="text" name="phone" />
            </p>
            <p class="full">
              <label>Message</label>
              <textarea name="message" rows="5"></textarea>
            </p>
            <p class="full">
              <button type="submit">Submit</button>
            </p>
          </form>
        </div>
      </div>
    </div>
  </body>
</html>